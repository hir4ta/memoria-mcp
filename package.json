{
  "name": "memoria-mcp",
  "version": "0.1.3",
  "description": "MCP server for saving and resuming Claude Code sessions",
  "type": "module",
  "bin": {
    "memoria-mcp": "dist/cli.js",
    "memoria-mcp-server": "dist/server.js"
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "bun run build:server && bun run build:cli && bun run build:dashboard",
    "build:server": "bun build src/server.ts --outfile dist/server.js --target node",
    "build:cli": "bun build src/cli.ts --outfile dist/cli.js --target node",
    "build:dashboard": "bun build src/dashboard/server.tsx --outfile dist/dashboard.js --target node",
    "dev": "bun run --watch src/cli.ts",
    "prepublishOnly": "bun run build"
  },
  "keywords": [
    "mcp",
    "modelcontextprotocol",
    "claude",
    "claude-code",
    "ai",
    "coding-sessions",
    "local-first",
    "session-management"
  ],
  "author": "",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": ""
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "devDependencies": {
    "@modelcontextprotocol/sdk": "^1.12.1",
    "@types/bun": "*",
    "@types/node": "^22.0.0",
    "@types/react": "^19.0.0",
    "@types/react-dom": "^19.0.0",
    "react": "^19.0.0",
    "react-dom": "^19.0.0",
    "zod": "^3.24.0"
  }
}
